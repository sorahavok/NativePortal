<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
  <meta charset="utf-8" />

  <!-- Set the viewport width to device width for mobile -->
  <meta name="viewport" content="width=device-width" />

  <%= yield :title %>
  <%= stylesheet_link_tag "application", :media => "all"%>
</head>
<body>

  <!-- Nav Bar -->

  <div class="row">
    <div class="large-12 columns">
      <div class="nav-bar right">
        <ul class="button-group">
          <li><%=link_to "Home", :main_index, { :class=>"button"}%></li>
          <% Section.all.each do |sec| %>
            <li><%= link_to sec.title, sec, { :class=>"button"}%></li>
          <% end %>
        </ul>
      </div>
      <h1><%=link_to "Native Gaming Portal", :main_index%></h1>
      <hr />
    </div>
  </div>

  <!-- End Nav -->


  <!-- Main Page Content and Sidebar -->

  <div class="row">

    <!-- Main Blog Content -->
    <div class="large-9 columns" role="content">
      <%= yield %>
    </div>

    <!-- End Main Content -->


    <!-- Sidebar -->

    <aside class="large-3 columns">

      <h5>Categories</h5>
      <ul class="side-nav">
        <% Section.all.each do |sec| %>
          <li><%= link_to sec.title, sec %></li>
        <% end %>
      </ul>

      <div class="panel">
        <h5>Featured</h5>
        <% feat = Entry.last %>
        
        <p>
          <%=feat.getFirst(50) %>
          <br />
          <%=link_to 'Read More', feat%>
        </p>
      </div>

    </aside>

    <!-- End Sidebar -->
  </div>

  <!-- End Main Content and Sidebar -->


  <!-- Footer -->

  <footer class="row">
    <div class="large-12 columns">
      <hr />
      <div class="row">
        <div class="large-6 columns">
          <p>&copy; Copyright Sora Havok</p>
        </div>
        <div class="large-6 columns">
          <ul class="inline-list right">
            <li><a href="#">Link 1</a></li>
            <li><a href="#">Link 2</a></li>
            <li><a href="#">Link 3</a></li>
            <li><a href="#">Link 4</a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>

  

  <!-- End Footer -->
</body>

<%= javascript_include_tag :application %>

<script>
    $(document).foundation().foundation('joyride', 'start');
</script>
    <%= tinymce %>
</html>

