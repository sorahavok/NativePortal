<%= form_for(@entry) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="row collapse">
  
    <div class="two columns">
      <span class="prefix">
        <%= f.label "Choose a Section:" %>
      </span>
    </div>
    <div class="ten mobile-three columns" style="padding-bottom:20px;">
      <% Section.all.each do |sec| %>
        <div class="left" style="padding-right:30px; padding-top:5px">
        <%= f.label "#{:section_id}_#{sec.id}", sec.title %>
        <%= f.radio_button :section_id, sec.id, checked: @entry.nil? || @entry.section == sec %>
        </div>
      <% end %>
    </div>
  
  
    
    <div class="small-3 large-2 columns">
      <span class="prefix">
        <%= f.label :title %>
      </span>
    </div>
    <div class="small-9 large-10 columns">
      <%= f.text_field :title %>
    </div>
  
  
    <div class="small-3 large-2 columns">
      <span class="prefix">
       <%= f.label :author %>
      </span>
    </div>
    <div class="small-9 large-10 columns">
      <%= f.text_field :author %>
    </div>
  
  
    <div class="small-3 large-2 columns">
      <span class="prefix">
       <%= f.label :url %>
      </span>
    </div>
    <div class="small-9 large-10 columns">
      <%= f.text_field :url %>
    </div>
  
  
    <span class="prefix">
      <%= label :content, "Content"%>
    </span>
    <br />
    <%= f.text_area :content, :class => "tinymce", :rows => 140, :cols => 120 %>
    <br />

  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
