<article>
  <h3>
    <% if(abbreviate) %>
      <%= link_to news.title, news %>
    <% else %>
      <%= news.title %>
    <% end %>
  </h3>
  <p>
    <% words = news.content.split(' ')
    if(abbreviate) %>
      <%= news.getFirst(100) %>  ... 
      <%= link_to '[more]', news %>
    <% else %>
      <%= news.content.html_safe %>
    <% end %>
  </p>
  
  <% if(news.url.length > 0) %>
    source: <%= link_to news.url, news.url %>
  <% end %>
  
  <div class="text-right">
    <%= link_to 'Edit', edit_news_path(news) %>
    <span>&nbsp;&nbsp;</span>
    <%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</article>
<hr />
